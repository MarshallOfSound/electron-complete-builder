{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "removeComments": true,
    "outDir": "out",
    "newLine": "LF",
    "noResolve": true,
    "noEmitOnError": true,
    "inlineSources": true,
    "sourceMap": true
  },
  "filesGlob": [
    "src/*.ts",
    "typings/**/*.d.ts"
  ],
  "files": [
    "typings/node/node.d.ts",
    "src/build.ts",
    "src/install-app-deps.ts",
    "src/util.ts"
  ]
}
